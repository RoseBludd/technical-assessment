      "task_types": [
        "UI Components",
        "Basic Services",
        "Simple Integrations",
        "Documentation"
      ],
      "evaluation_criteria": {
        "speed": 0.25,
        "accuracy": 0.25,
        "communication": 0.25,
        "problem_solving": 0.25
