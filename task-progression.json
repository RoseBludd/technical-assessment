  "progression_rules": {
    "assessment_to_trial": {
      "requirements": [
        "Pass GitHub assessment with score >= 0.8",
        "Complete code review",
        "Pass technical interview"
      ]
    },
    "trial_to_advanced": {
      "requirements": [
        "Complete trial task with score >= 0.85",
        "Good communication record",
        "Demonstrated problem-solving ability"
      ]
    },
    "advanced_to_sprint": {
      "requirements": [
        "Complete advanced tasks with score >= 0.85",
        "Consistent code quality",
        "Good team collaboration"
      ]
    },
    "sprint_to_hire": {
      "requirements": [
        "Complete sprint tasks with score >= 0.9",
        "Excellent performance record",
        "Cultural fit demonstrated",
        "Long-term potential identified"
      ]
    }
  },
  "task_assignment_rules": {
    "assessment": {
      "max_concurrent": 10,
      "time_limit_days": 7,
      "retry_allowed": false
    },
    "trial": {
      "max_concurrent": 4,
      "time_limit_days": 3,
